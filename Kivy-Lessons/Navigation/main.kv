WindowManager:
    MainWindow:
        passwd:passwd
        btn:btn
    SecondWindow:

<MainWindow>:
    name: "main"
    GridLayout:
        cols:1

        GridLayout:
            cols:2
            Label:
                text:"Password: "
            TextInput:
                id: passwd
                multiline:False

        Button:
            id:btn
            text:"Submit"
            on_release:
                app.root.current = "second" if passwd.text == "isaac" else "main"

<SecondWindow>:
    name: "second"
    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
